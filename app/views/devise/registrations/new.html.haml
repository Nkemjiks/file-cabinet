%h2.text-center.m-5 Sign up
%div.col-8.offset-2.col-sm-6.offset-sm-3
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification

    %div.field.form-group
      = f.label :first_name
      = f.text_field :first_name, hint: "greater than 2 characters", autofocus: true, required: true, input_html: { autocomplete: "first-name" }, class: "form-control"
    %div.field.form-group
      = f.label :last_name
      = f.text_field :last_name, hint: "greater than 2 characters", required: true, input_html: { autocomplete: "last-name" }, class: "form-control"
    %div.field.form-group 
      = f.label :email
      = f.email_field :email, required: true, input_html: { autocomplete: "email" }, class: "form-control"
    %div.field.form-group
      = f.label :password
      = f.password_field :password,  required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, class: "form-control"
    %div.field.form-group
      = f.label :password_field
      = f.password_field :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, class: "form-control"

    %div.form-actions
      = f.button :submit, "Sign up", class: 'btn btn-primary'
  %hr
  = render "devise/shared/links"
