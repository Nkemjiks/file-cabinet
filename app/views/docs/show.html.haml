%h2.text-center.m-5= @doc.title

%div.container
  %div.d-flex.justify-content-end.mb-2
    = link_to 'All Files', docs_path, class: 'p-2 text-dark m-1'
    = link_to 'Edit', edit_doc_path(@doc), class: 'btn btn-outline-primary m-1'
    = link_to 'Delete', doc_path(@doc), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger m-1'
  %p= @doc.content
