%div.col-8.offset-2.col-sm-6.offset-sm-3
  = simple_form_for @doc do |f|
    %div.field.form-group
      = f.label :title
      = f.text_field :title, class: "form-control", id: "wysiwyg"

    %div.field.form-group
      = f.label :content
      = f.rich_text_area :content
    %div.form-actions
      = f.button :submit, class: 'btn btn-primary'
      = link_to 'Cancel', docs_path, class: 'btn btn-outline-primary'
